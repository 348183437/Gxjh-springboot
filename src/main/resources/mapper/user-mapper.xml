<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.cn.shcd.gxjh.dao.UserMapper">
<!--登录-->
    <sql id="insertFields">
         username,password,type,passwordbody,role
    </sql>

    <sql id="selectFields">
        id,username,password,type,passwordbody,salt,role
    </sql>

    <select id="login" resultType="com.cn.shcd.gxjh.entity.UserInfo">
         select * from USERINFO where USER_NAME=#{param1} and USER_PASSWORD=#{param2}
   </select>

    <select id="selectById" resultType="com.cn.shcd.gxjh.entity.UserInfo">
        select  <include refid="selectFields"></include>
        from USERINFO where id = #{id}
   </select>

    <select id="selectByName" resultType="com.cn.shcd.gxjh.entity.UserInfo">
        select  <include refid="selectFields"></include>
        from USERINFO where   #{id}
   </select>

    <insert id="insertUser" parameterType="com.cn.shcd.gxjh.entity.UserInfo" >
        insert into USERINFO(<include refid="insertFields"></include>)
        values(#{username},#{password},#{type},#{passwordBody},#{role})
    </insert>
    
    <update id="updatePassword">
        Update USERINFO set password = #{password} where id = #{id}
    </update>
